---
import { Menu } from '../components/menu'
import { TableComponent } from '../components/tableComponent'
import { elements } from '../data'
---

<html lang="es">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Examen de la tabla periodica</title>
    <meta name="description" content="Pagina para aprender la tabla periodica jugando a adivinar los diferentes elementos">
    <meta charset="UTF-8">
	</head>
	<body>
    <main class="flex min-h-screen flex-col items-center justify-between p-24">
      <div class="landscape:hidden">
        <h1 class="text-4xl font-bold">Gira el dispositivo para usar esta web</h1>
        <h2 class="text-2xl text-gray-400">Para una mejor experiencia, abrir en un ordenador.</h2>
      </div>
      <div class="flex flex-col gap-2 text-center portrait:hidden">
        <h1 class="lg:text-8xl text-4xl">Completa la tabla</h1>
        <Menu client:load/>
      </div>
      <div>
        <div class="grid grid-cols-[repeat(18,1fr)] grid-rows-[repeat(7,1fr)] gap-1 portrait:hidden">
          {elements.map((element) => (
            <TableComponent element={element} client:load/>
          ))}
        </div>
      </div>
    </main>
    <footer class="text-center mb-2">
      <p>Made by @Juangr4</p>
    </footer>
	</body>
</html>
